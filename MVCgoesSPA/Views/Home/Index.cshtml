@using MVCgoesSPA.Models
@model List<Spa>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Generic spa listing site for demo purposes</h1>
    
</div>

<div class="row">
    <div class="col-md-12">
        <h2>List of spas</h2>
        
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 400px;">Name</th>
                    <th style="width: 150px;">Day price</th>
                    <th style="width: 150px;">Weekend price</th>
                    <th style="width: 200px;">Number of visitors</th>
                </tr>
            </thead>
            @{
                var count = 0;
            }
            @foreach (var spa in Model)
            {
                count++;
                <tr>
                    <td><a href="/Home/Spa?id=@count">@spa.Name</a></td>
                    <td>@spa.DayTicketPrice.ToString("0.##") €</td>
                    <td>@spa.WeekEndTicketPrice.ToString("0.##") €</td>
                    <td>@spa.Visitors.Count</td>
                </tr>
            }
        </table>

    </div>
    
</div>