@using MVCgoesSPA.Models
@model Spa
@{
    ViewBag.Title = "Spa";
}
<h2>@Model.Name</h2>

<p>Day price: @Model.DayTicketPrice.ToString("0.##") €</p>
<p>Weekend price: @Model.WeekEndTicketPrice.ToString("0.##") €</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Time of visit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visitor in Model.Visitors)
        {
            <tr>
                <td>@visitor.FirstName</td>
                <td>@visitor.LastName</td>
                <td>@visitor.Email</td>
                <td>@visitor.Phone</td>
                <td>@visitor.VisitTime.ToString("dd.MM.yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>